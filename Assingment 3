#include<iostream>
using namespace std;
#define MAX 5
class Stack {
    int arr[MAX];
    int top;

public:
    Stack() { top = -1; }

    //  push()
    void push(int value) {
        if (isFull()) {
            cout << "\nStack Overflow! Cannot push " << value << endl;
        } else {
            arr[++top] = value;
            cout << value << " pushed into stack." << endl;
        }
    }

    //  pop()
    void pop() {
        if (isEmpty()) {
            cout << "\nStack Underflow! Nothing to pop." << endl;
        } else {
            cout << arr[top--] << " popped from stack." << endl;
        }
    }

    //  isEmpty()
    bool isEmpty() {
        return (top == -1);
    }

    //  isFull()
    bool isFull() {
        return (top == MAX - 1);
    }

    //  display()
    void display() {
        if (isEmpty()) {
            cout << "\nStack is empty." << endl;
        } else {
            cout << "\nStack elements are: ";
            for (int i = top; i >= 0; i--)
                cout << arr[i] << " ";
            cout << endl;
        }
    }

    //  peek()
    void peek() {
        if (isEmpty()) {
            cout << "\nStack is empty. No top element." << endl;
        } else {
            cout << "\nTop element is: " << arr[top] << endl;
        }
    }
};
int main() {
    Stack s;
    int choice, value;
    do {
        cout << "\n STACK MENU ";
        cout << "\n1. Push";
        cout << "\n2. Pop";
        cout << "\n3. Check if Empty";
        cout << "\n4. Check if Full";
        cout << "\n5. Display Stack";
        cout << "\n6. Peek (Top Element)";
        cout << "\n7. Exit";
cout << "\nEnter your choice: ";
        cin >> choice;
switch (choice) {
        case 1:
            cout << "Enter value to push: ";
            cin >> value;
            s.push(value);
            break;
        case 2:
            s.pop();
            break;
        case 3:
            if (s.isEmpty())
                cout << "\nStack is Empty." << endl;
            else
                cout << "\nStack is Not Empty." << endl;
            break;
        case 4:
            if (s.isFull())
                cout << "\nStack is Full." << endl;
            else
                cout << "\nStack is Not Full." << endl;
            break;
        case 5:
            s.display();
            break;
        case 6:
            s.peek();
            break;
        case 7:
            cout << "\nExiting program..." << endl;
            break;
        default:
            cout << "\nInvalid choice! Please try again." << endl;
        }
    } while (choice != 7);

    return 0;
} 



//2nd question
#include <iostream>
#include <stack>   // for STL stack
#include <string>
using namespace std;

int main() {
    string str;
    cout << "Enter a string: ";
    getline(cin, str); // input string with spaces if any

    stack<char> s; 

    // Push all characters of the string into the stack
    for (char ch : str) {
        s.push(ch);
    }

    // Pop all characters from the stack and rebuild the reversed string
    string reversed = "";
    while (!s.empty()) {
        reversed += s.top(); // take top element
        s.pop();             // remove top element
    }

    cout << "\nReversed string: " << reversed << endl;

    return 0;
}
//3rd question
#include <iostream>
#include <stack>
using namespace std;

int main() {
    string expr;
    cout << "Enter an expression: ";
    cin >> expr;

    stack<char> s;
    bool balanced = true;

    for (char ch : expr) {
        if (ch == '(' || ch == '{' || ch == '[')
            s.push(ch);
        else if (ch == ')' || ch == '}' || ch == ']') {
            if (s.empty()) {
                balanced = false;
                break;
            }
            char top = s.top();
            s.pop();

            if ((ch == ')' && top != '(') ||
                (ch == '}' && top != '{') ||
                (ch == ']' && top != '[')) {
                balanced = false;
                break;
            }
        }
    }

    if (!s.empty()) balanced = false;

    if (balanced)
        cout << "Balanced parentheses." << endl;
    else
        cout << "Not balanced." << endl;

    return 0;
}
 //4thquestion

 #include <iostream>
#include <stack>
using namespace std;

int precedence(char c) {
    if (c == '^')
        return 3;
    else if (c == '*' || c == '/')
        return 2;
    else if (c == '+' || c == '-')
        return 1;
    else
        return 0;
}

int main() {
    string infix, postfix = "";
    stack<char> s;

    cout << "Enter infix expression: ";
    cin >> infix;

    for (char c : infix) {
        if (isalnum(c)) // operand
            postfix += c;
        else if (c == '(')
            s.push(c);
        else if (c == ')') {
            while (!s.empty() && s.top() != '(') {
                postfix += s.top();
                s.pop();
            }
            s.pop(); // remove '('
        } else { // operator
            while (!s.empty() && precedence(s.top()) >= precedence(c)) {
                postfix += s.top();
                s.pop();
            }
            s.push(c);
        }
    }

    while (!s.empty()) {
        postfix += s.top();
        s.pop();
    }

    cout << "Postfix expression: " << postfix << endl;
    return 0;
}
 //5thquestion
 #include <iostream>
#include <stack>
#include <cmath>
using namespace std;


int evaluatePostfix(string exp) {
    stack<int> s;

    for (int i = 0; i < exp.length(); i++) {
        char ch = exp[i];

        // Skip spaces
        if (ch == ' ')
            continue;

        // If operand, push to stack
        if (isdigit(ch)) {
            s.push(ch - '0');  // Convert char to int
        }

        // If operator, pop two elements and apply the operator
        else {
            int val2 = s.top(); s.pop();
            int val1 = s.top(); s.pop();

            switch (ch) {
                case '+': s.push(val1 + val2); break;
                case '-': s.push(val1 - val2); break;
                case '*': s.push(val1 * val2); break;
                case '/': s.push(val1 / val2); break;
                case '^': s.push(pow(val1, val2)); break;
            }
        }
    }

   
    return s.top();
}


int main() {
    string exp;
    cout << "Enter a postfix expression: ";
    getline(cin, exp);

    cout << "Result = " << evaluatePostfix(exp) << endl;
    return 0;
}
