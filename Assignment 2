//triangular matrix
#include <stdio.h>
#define MAX 4

int main() {
    int a[4][4], size = (MAX*(MAX+1))/2;
    printf("\nEnter elements (row major): ");
    for (i = 0; i < size; i++)
        scanf("%d", &a[i]);
    printf("\nThe upper triangular matrix is...\n");
    for (i = 0; i < MAX; i++) {
        for (j = 0; j < MAX; j++)
            if (i <= j)
                printf("%d ", a[k]);
            else
                printf("0 ");
        k++;
        printf("\n");
    }
    k = 0;
    printf("\nThe lower triangular matrix is...\n");
    for (i = 0; i < MAX; i++) {
        for (j = 0; j < MAX; j++)
            if (i >= j) {
                printf("%d ", a[k]);
                k++;
            } else
                printf("0 ");
        printf("\n");
    }
    return 0;
}

// Q-5e symmetric matrix
#include <iostream>
using namespace std;

int main() {
    int A[10][10], n;
    bool isSymmetric = true;

    cout << "Enter the size of square matrix (n x n): ";
    cin >> n;

    cout << "Enter the elements of the matrix:\n";
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) {
            cin >> A[i][j];
        }
    }

    
    for (int i = 0; i < n && isSymmetric; i++) {
        for (int j = 0; j < n; j++) {
            if (A[i][j] != A[j][i]) {
                isSymmetric = false;
                break;
            }
        }
    }

    if (isSymmetric)
        cout << "The matrix is symmetric." << endl;
    else
        cout << "The matrix is not symmetric." << endl;

    return 0;
}

//Q-6a
#include <iostream>
using namespace std;

int main() {
    int A[10][3] = {
        {3,3,4},
        {0,0,5},
        {0,2,8},
        {1,1,3},
        {2,2,6}
    };

    int B[10][3] = {
        {3,3,3},
        {0,0,2},
        {1,1,4},
        {2,0,7}
    };

    int T[10][3];

    cout << "Matrix A\nRow Col Val\n";
    for (int i=0;i<=A[0][2];i++)
        cout << A[i][0] << "   " << A[i][1] << "   " << A[i][2] << "\n";
    cout << endl;

    cout << "Matrix B\nRow Col Val\n";
    for (int i=0;i<=B[0][2];i++)
        cout << B[i][0] << "   " << B[i][1] << "   " << B[i][2] << "\n";
    cout << endl;

    int n=A[0][2], k=1;
    T[0][0]=A[0][1]; T[0][1]=A[0][0]; T[0][2]=n;
    for (int i=0;i<A[0][1];i++) {
        for (int j=1;j<=n;j++) {
            if (A[j][1]==i) {
                T[k][0]=A[j][1];
                T[k][1]=A[j][0];
                T[k][2]=A[j][2];
                k++;
            }
        }
    }
    cout << "Transpose of A\nRow Col Val\n";
    for (int i=0;i<=T[0][2];i++)
        cout << T[i][0] << "   " << T[i][1] << "   " << T[i][2] << "\n";
    cout << endl;
}
//6b
#include <iostream>
using namespace std;

int main() {
    int A[10][3] = {
        {3,3,4},
        {0,0,5},
        {0,2,8},
        {1,1,3},
        {2,2,6}
    };

    int B[10][3] = {
        {3,3,3},
        {0,0,2},
        {1,1,4},
        {2,0,7}
    };

    int C[20][3];

    cout << "Matrix A\nRow Col Val\n";
    for (int i=0;i<=A[0][2];i++)
        cout << A[i][0] << "   " << A[i][1] << "   " << A[i][2] << "\n";
    cout << endl;

    cout << "Matrix B\nRow Col Val\n";
    for (int i=0;i<=B[0][2];i++)
        cout << B[i][0] << "   " << B[i][1] << "   " << B[i][2] << "\n";
    cout << endl;
    if (A[0][0]!=B[0][0] || A[0][1]!=B[0][1]) {
        cout << "Addition not possible!\n";
    } else {
        int n1=A[0][2], n2=B[0][2];
        int i=1,j=1, k=1;
        C[0][0]=A[0][0]; C[0][1]=A[0][1];
        while (i<=n1 && j<=n2) {
            if (A[i][0]<B[j][0] || (A[i][0]==B[j][0] && A[i][1]<B[j][1])) {
                C[k][0]=A[i][0]; C[k][1]=A[i][1]; C[k][2]=A[i][2]; i++; k++;
            }
            else if (B[j][0]<A[i][0] || (A[i][0]==B[j][0] && B[j][1]<A[i][1])) {
                C[k][0]=B[j][0]; C[k][1]=B[j][1]; C[k][2]=B[j][2]; j++; k++;
            }
            else {
                int sum=A[i][2]+B[j][2];
                if (sum!=0) { C[k][0]=A[i][0]; C[k][1]=A[i][1]; C[k][2]=sum; k++; }
                i++; j++;
            }
        }
        while (i<=n1) { C[k][0]=A[i][0]; C[k][1]=A[i][1]; C[k][2]=A[i][2]; i++; k++; }
        while (j<=n2) { C[k][0]=B[j][0]; C[k][1]=B[j][1]; C[k][2]=B[j][2]; j++; k++; }
        C[0][2]=k-1;

        cout << "A + B\nRow Col Val\n";
        for (int i=0;i<=C[0][2];i++)
            cout << C[i][0] << "   " << C[i][1] << "   " << C[i][2] << "\n";
        cout << endl;
    }

}
//6c
#include <iostream>
using namespace std;

int main() {
    int A[10][3] = {
        {3,3,4},
        {0,0,5},
        {0,2,8},
        {1,1,3},
        {2,2,6}
    };

    int B[10][3] = {
        {3,3,3},
        {0,0,2},
        {1,1,4},
        {2,0,7}
    };

    int M[20][3];

    cout << "Matrix A\nRow Col Val\n";
    for (int i=0;i<=A[0][2];i++)
        cout << A[i][0] << "   " << A[i][1] << "   " << A[i][2] << "\n";
    cout << endl;

    cout << "Matrix B\nRow Col Val\n";
    for (int i=0;i<=B[0][2];i++)
        cout << B[i][0] << "   " << B[i][1] << "   " << B[i][2] << "\n";
    cout << endl;

    if (A[0][1]!=B[0][0]) {
        cout << "Multiplication not possible!\n";
    } else {
        int k=1;
        M[0][0]=A[0][0]; M[0][1]=B[0][1];
        for (int i=1;i<=A[0][2];i++) {
            for (int j=1;j<=B[0][2];j++) {
                if (A[i][1]==B[j][0]) {
                    int r=A[i][0], col=B[j][1], val=A[i][2]*B[j][2];
                    int found=0;
                    for (int x=1;x<k;x++) {
                        if (M[x][0]==r && M[x][1]==col) {
                            M[x][2]+=val; found=1; break;
                        }
                    }
                    if (!found) {
                        M[k][0]=r; M[k][1]=col; M[k][2]=val; k++;
                    }
                }
            }
        }
        M[0][2]=k-1;

        cout << "A * B\nRow Col Val\n";
        for (int i=0;i<=M[0][2];i++)
            cout << M[i][0] << "   " << M[i][1] << "   " << M[i][2] << "\n";
    }

}
//Q-7
#include <iostream>
using namespace std;
int main(){
    int n ;
    cout<<"enter n : ";
    cin>>n;
    int arr[n];
    int c = 0;
    cout<<" enter ele of array : ";
    for (int i = 0 ; i<=n-1 ; i++){
        cin>>arr[i];
    }

    for (int i = 0 ; i<n-1 ; i++ ){
        for(int j = i+1 ; j<=n-1 ; j++){
            if(arr[i]>arr[j]){
                c++ ;
             cout<<"("<<i<<","<<j<<")"<<endl;
            }
        }
     }

    cout<<"there are "<<c<<" inversion pairs in our array " ;
    return 0 ;

}
//Q8
#include <iostream>
using namespace std;

struct Triplet {
    int row;
    int col;
    int value;
};

void inputTriplet(Triplet mat[], int &nonZero) {
    cout << "Enter number of non-zero elements: ";
    cin >> nonZero;
    cout << "Enter triplet elements (row col value):\n";
    for (int i = 0; i < nonZero; i++) {
        cin >> mat[i].row >> mat[i].col >> mat[i].value;
    }
}

void displayTriplet(Triplet mat[], int n) {
    cout << "Row\tCol\tValue\n";
    for (int i = 0; i < n; i++) {
        cout << mat[i].row << "\t" << mat[i].col << "\t" << mat[i].value << "\n";
    }
}

void transpose(Triplet mat[], Triplet trans[], int n) {
    for (int i = 0; i < n; i++) {
        trans[i].row = mat[i].col;
        trans[i].col = mat[i].row;
        trans[i].value = mat[i].value;
    }
}

int main() {
    Triplet mat[100], trans[100];
    int nonZero;

    inputTriplet(mat, nonZero);

    cout << "\nOriginal Matrix in Triplet Form:\n";
    displayTriplet(mat, nonZero);

    transpose(mat, trans, nonZero);

    cout << "\nTransposed Matrix in Triplet Form:\n";
    displayTriplet(trans, nonZero);

    return 0;
}
